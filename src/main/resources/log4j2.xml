<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-30d %highlight{[%p]} [%t] %-30.30C: %msg%n%throwable"/>
        </Console>
        <RollingFile name="File" filename="./logs/app-log4j3.log"
                     filePattern="./logs/app-%d{-dd-MMMM-yyyy}-%i.log4j2.log.gz">
            <PatternLayout>
                <pattern>%d [%t] %C: %msg%n%throwable</pattern>
            </PatternLayout>
            <Policies>
                <OnStartUpTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
        <Logger name="com.turborvip.security" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>
    </Loggers>
</configuration>